@model ContosoUniversity.Models.Enrollment

@{
    ViewBag.Title = "Detail Pendaftaran";
}

<h2>Detail Pendaftaran</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Course.Title, "Mata Kuliah")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.Title)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Student.FirstMidName, "Nama Depan")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Student.LastName, "Nama Belakang")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Grade, "Nilai")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Grade)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Index")" class="btn btn-default">Kembali</a>
    <a href="@Url.Action("Edit", new { id=Model.EnrollmentID })" class="btn btn-warning">Edit</a>
</p>
