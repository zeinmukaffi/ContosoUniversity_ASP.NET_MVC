<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contoso University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        ul li a{
            color: white;
            margin-top: 5px;
        }
        ul li a:hover {
            color: #333333;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.ActionLink("Contoso University", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <ul class="nav" style="display: flex; float: right;">
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a href="@Url.Action("About","Home")">Tentang</a></li>
                        <li><a href="@Url.Action("Index","Siswaa")">Siswa</a></li>
                        <li><a href="@Url.Action("Index","MataKuliah")">Mata Kuliah</a></li>
                        <li><a href="@Url.Action("Index","Pendaftaran")">Pendaftaran</a></li>
                        <li><a href="@Url.Action("Index","Student")">Student</a></li>
                        <li><a href="@Url.Action("Index","Course")">Course</a></li>
                        <li><a href="@Url.Action("Index","Enrollment")">Enrollments</a></li>
                    </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Contoso University</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>